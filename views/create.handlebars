<body class="login-body">
    <!-- Navigation Bar -->
    {{> navbar/navbar-logged-in}}
    <!-- Review Form Section -->
    <section>
        <div class="container">
            <div class="row spacer"></div>
            <div class="row">
                <div class="col-md-12 reviewBox">
                    <h3 class="text-center">Submit a Review</h3>
                    <h4 class="font-weight-bold review-title mt-3 text-center">
                        <!-- Insert movie title below -->
                        {{title}}
                    </h4>
                    <form class="mt-3">
                        <div class="form-group">
                            <label for="score-select">Score</label>
                            <!-- Score select -->
                            <select class="form-control" id="score-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="review-text">Review</label>
                            <!-- Review text -->
                            <textarea class="form-control" id="review-text" rows="3"></textarea>
                        </div>
                        <!-- Login button -->
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </form>
                </div>
            </div>
            <div class="row spacer"></div>
        </div>
    </section>
    <!-- Hidden inputs with movie info to submit to database -->
    <input type="hidden" id="IMDBid" value="{{IMDBid}}">
    <input type="hidden" id="posterURL" value="{{posterURL}}">
</body>